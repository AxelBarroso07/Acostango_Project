<%- include('./partials/header.ejs', { titlePage: 'Create Event' }) %>

<h1>New Event</h1>

<div>
    <a href="/">
        <i class="fa-solid fa-arrow-left" style="color: #0c0c0f"> Back</i>
    </a>
</div>

<div>
    <form action="/confirmCreateEvent" id="formEvent" enctype="multipart/form-data" method="POST">
        <label>Title:</label>
        <input type="text" id="title" name="title" min="3" max="100" value="" required>
        
        <label for="description">Description:</label>
        <br>
        <textarea id="description" name="description" cols="50" rows="4" maxlength="100" style="resize: none;" value="" required></textarea>
        <br>

        <label for="image">Select Image:</label>
        <input type="file" id="image" class="image" name="image" accept="image/*" required>
        
        <label for="day">Select day of the week:</label><br>
        <select name="day" id="day" required>
            <option disabled selected hidden value="">Week day</option>
            <% for(let i = 0; i < weekDay.length; i++) {%>
                <option value="<%- weekDay[i] %>">
                    <%- weekDay[i] %>
                </option>
            <% } %>
        </select>
        <br>
        <label for="time_start">Time start:</label>
        <input type="time" id="time_start" name="time_start" required>

        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required>

        <label for="location">Location:</label>
        <input type="text" id="location" max="50" name="location" required>

        <label for="price">Price</label>
        <input type="number" id="price" name="price" required>

        <button type="submit" id="createEventButton">Create</button>
    </form>
</div>

<%- include('./partials/footer.ejs') %>