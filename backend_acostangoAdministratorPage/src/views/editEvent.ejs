<%- include('./partials/header.ejs', { titlePage: 'Edit event' }) %>

<h1>Edit event</h1>
<div>
    <a href="/">
        <i class="fa-solid fa-arrow-left" style="color: #f5f5fa;"></i>
    </a>
</div>

<div>
    <form action="/editEvent/<%= data.idCalendar %>" id="formEvent" enctype="multipart/form-data" method="post">
        <label>Title:</label>
        <input type="text" id="title" name="title" min="3" max="100" value="<%= data.title %>">
        
        <label for="description">Description:</label>
        <br>
        <textarea id="description" name="description" cols="50" rows="4" maxlength="140" style="resize: none;" value=""><%= data.description %></textarea>
        <br>

        <label for="image">Image</label>
        <input type="file" id="image" class="image" name="image" accept="image/*">
        
        <select name="day" id="day">
            <option disabled selected hidden value="">Week day</option>
            <% for(let i = 0; i < weekDay.length; i++) { %>
                <% const day = weekDay[i]; %>
                <option value="<%- day %>" <%= data.day === day ? 'selected' : '' %>>
                    <%= day %>
                </option>
            <% } %>
        </select>
        <br>
        <label for="time_start">Time start:</label>
        <input type="time" id="time_start" name="time_start" value="<%= data.time_start %>">
<!-- 
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= data.date_formatted %>">  -->

        <label for="location">Location:</label>
        <input type="text" id="location" max="50" name="location" value="<%= data.location %>">

        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= data.price %>">

        <button type="submit">Edit event</button>
    </form>
</div>

<%- include('./partials/footer.ejs') %>